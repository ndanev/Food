<div class="container">
    <div class="mb-3">ALL POSTS</div>


    <table class="table table-bordered">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>Title</th>
                <th>Desc</th>
                <th>Status</th>
                <th>Comments Allowed</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{category.title}}</td>
                <td>
                    <a href="/admin/posts/edit/{{_id}}">Edit</a>
                </td>
                <td>
                    <form action="/admin/posts/delete/{{_id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">x</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>