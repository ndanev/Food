<div class="row">
    <div class="container">
        <div class="col-md-10">
            <table class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                    <tr>
                        <th>Id</th>
                        <th>Publisher</th>
                        <th>Approved Comments</th>
                        <th>Date</th>
                        <th>Comment Body</th>
                    </tr>
                </thead>
                <tbody class="bg-white text-dark">
                    {{#each comments}}
                    <tr>
                        <td>{{_id}}</td>
                        <td width="auto">{{user.firstName}} {{user.lastName}}</td>
                        <td>{{commentIsApproved}}</td>
                        <td>{{date}}</td>
                        <td>{{body}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>